{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "!.next/cache/**",
        ".next/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}
